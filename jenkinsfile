pipeline {
    agent any
    stages {
        stage ('BUILD') {
            steps {
                echo " this is build stage"
                sh '''
                sleep 5
                exit 0
                '''
            }
        }
        stage ('TEST') {
            steps {
                echo " this is test stagels
                "
                sh '''
                cat /etc/os-release
                '''
            }
        }
        stage ('Deploy') {
            steps {
                echo " this is deploy stage"
                sh '''
                exit 0
                '''
            }
        }
    }
}